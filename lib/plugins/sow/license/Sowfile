#!/usr/bin/env ruby

# Add a specified license to your project.
# 
# Usage:
# 
#   sow license <name>
# 
# If no license name is given, it defaults to
# the Apache 2.0 License.

licenses = %w{apache gpl lpgl mit ruby}

licenses.each do |license|

  select license do
    copy '*', :from=>license
  end

end

select :default do
  copy '*', :from=>'apache'
end

#select_missing do
#  abort "License not found. Try:\n  " + licenses.join("\n  ")
#end



